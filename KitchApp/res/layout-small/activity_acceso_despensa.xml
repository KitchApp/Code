<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
 	android:fillViewport="true">
	<RelativeLayout
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent" 
    	android:background="#ffffff">

	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:orientation="vertical" >
	        
	        <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal">
		    	<TextView
		        	android:id="@+id/textView1"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:gravity="center"
		    		android:text="@string/despensa"
		    		android:textColor="@color/navy"
		    		android:textSize="40sp" >		
		    	</TextView>
			</LinearLayout>
			
	        <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal">
		   		<Button
		   	    	android:id="@+id/buttonDairy"
		   	    	style="@style/boton_style"
		   	    	android:layout_weight="1"			   	       			   	    
			   	    android:background="@drawable/boton_redondo_color_celeste"
			   	    android:text="@string/lacteos"
			   	    android:textColor="@color/white" />  	
			   	<Button
			   	    android:id="@+id/buttonFruits"
			   	    style="@style/boton_style"
			   	    android:layout_weight="1"			   	    		   	    			   	    
			   	    android:background="@drawable/boton_redondo_color_celeste"
			   	    android:text="@string/frutasVerduras"
			   	    android:textColor="@color/white" />
			</LinearLayout>   	
			   	
	        <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal">
			   	<Button
			   	    android:id="@+id/buttonBread"
			   	    style="@style/boton_style"
			   	    android:layout_weight="1"
			   	    android:background="@drawable/boton_redondo_color_celeste"
			   	    android:text="@string/panBolleria"
			   	    android:textColor="@color/white" />
			
			   	<Button
			       	android:id="@+id/buttonDrinks"
			       	style="@style/boton_style"
			       	android:layout_weight="1"			       	
			       	android:background="@drawable/boton_redondo_color_celeste"
			       	android:text="@string/bebidas" 
			       	android:textColor="@color/white"/>
			</LinearLayout>
			
	        <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal">
			   	<Button
			   	    android:id="@+id/buttonMeat"
			   	    style="@style/boton_style"
			   	    android:layout_weight="1"
			   	    android:background="@drawable/boton_redondo_color_celeste"
			   	    android:text="@string/carnes" 
			   	    android:textColor="@color/white"/>
	            
			   	<Button
			       	android:id="@+id/buttonFish"
			       	style="@style/boton_style"
			       	android:layout_weight="1"
			       	android:background="@drawable/boton_redondo_color_celeste"
			       	android:text="@string/pescados" 
			       	android:textColor="@color/white"/>						   	
			</LinearLayout>
			
			<LinearLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal">
			   	<Button
			   	    android:id="@+id/buttonSauces"
			   	    style="@style/boton_style"
			   	    android:layout_weight="1"
			   	    android:background="@drawable/boton_redondo_color_celeste"
			   	    android:text="@string/salsasCondimentos"
			   	    android:textColor="@color/white" />
			   	
			   	<Button
			       	android:id="@+id/buttonPasta"
			       	style="@style/boton_style"
			       	android:layout_weight="1"
			       	android:background="@drawable/boton_redondo_color_celeste"
			       	android:text="@string/pastasArroces"
			       	android:textColor="@color/white" />
			</LinearLayout>			   				   			   	
						   					   	
			<LinearLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal">
			   	<Button
			   	    android:id="@+id/buttonFrozen"
			   	    style="@style/boton_style"
			   	    android:layout_weight="1"
			   	    android:background="@drawable/boton_redondo_color_celeste"
			   	    android:text="@string/congelados" 
			   	    android:textColor="@color/white"/>
			   	<Button
			       	android:id="@+id/buttonOthers"
			       	style="@style/boton_style"
			       	android:layout_weight="1"
			       	android:background="@drawable/boton_redondo_color_celeste"
			       	android:text="@string/varios"
			       	android:textColor="@color/white" />
			</LinearLayout>		

			<LinearLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal">			   	
			   	<Button
			   	    android:id="@+id/button_lens"
			   	    android:layout_width="wrap_content"
			   	    android:layout_height="wrap_content"			   	    
			   	    android:layout_gravity="center_horizontal"
			   	    android:background="@drawable/lupa_sobre_un_robot_androide"
			   	    android:layout_marginTop="25dp"/>
			</LinearLayout>		
			   	
	   	</LinearLayout>
	</RelativeLayout>
</ScrollView>