<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:fillViewport="true">
  <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">
 
        <!--  Encabezado-->
        <LinearLayout 
            	android:id="@+id/encabezado"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@layout/cabecera"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">
                <!-- Logo de encabezado-->
                <ImageView 
                      android:src="@drawable/cabecera_kitchapp"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="10dp"
                      android:layout_marginRight="10dp" />
                <!-- fin Logo de encabezado -->
        </LinearLayout>
        <!--  fin Encabezado -->
        <!-- Pie de página -->
        <LinearLayout 
            	  android:id="@+id/footer"
            	  android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@layout/pie_de_pagina"
                android:layout_alignParentBottom="true">
        </LinearLayout>
        <!-- fin Pie de página -->
 
        <!-- Formulario de login -->
        <LinearLayout         
          		android:orientation="vertical"
          		android:layout_width="fill_parent"
          		android:layout_height="wrap_content"
          		android:padding="10dp"
          		android:layout_below="@id/encabezado">
                
          <!--  Etiqueta de correo electrónico -->
          <TextView 
              	android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:textSize="17sp"
                android:text="Usuario" />
          
          <EditText 
              	android:id="@+id/editTextuserName"
              	android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:singleLine="true"
                android:textSize="17sp"
                android:textColor="@color/black" />
          
          <!--  Etiqueta contraseña -->
          <TextView 
              	android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:textSize="17sp"
                android:text="Contraseña"/>
          
          <EditText 
              	android:id="@+id/editTextPassword"
              	android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:password="true"
                android:textSize="17sp"
                android:textColor="@color/black" />
          
          <!-- Botón Login -->
          <Button 
              	android:id="@+id/btnLogin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Login"
                android:onClick="intento_logueo"/>
          
          <!-- Enlace a la pantalla de registro -->
          <TextView 
              	android:id="@+id/link_to_register"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:text="Nuevo en KitchApp? Registrate Aquí"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#0b84aa"
                android:clickable="true"
                android:onClick="registrarse" />
 
        </LinearLayout>
        <!-- fin Formulario de login -->
  </RelativeLayout>
</ScrollView>
