<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/propuestaportadaappis" >

    <Button
        android:id="@+id/button1"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="120dp"
        android:background="@color/aqua"
        android:text="@string/despensa"
        android:onClick="accederDespensa" />

    <Button
        android:id="@+id/button2"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:layout_marginLeft="258dp"
        android:background="@color/aqua"
        android:text="@string/recetario" />
    
	<Button
        android:id="@+id/button3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="100dp"
        android:background="@color/aqua"
        android:text="@string/lista_compra" />
	
	<Button
        android:id="@+id/button4"
        android:layout_width="160dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="1dp"
        android:layout_marginLeft="5dp"
        android:background="@color/aqua"
        android:text="@string/estadisticas" />

</LinearLayout>
