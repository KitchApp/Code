<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:fillViewport="true">
  <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">
 
        <!--  Encabezado-->
        <LinearLayout 
            	android:id="@+id/header"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@layout/cabecera"
                android:paddingTop="5dip"
                android:paddingBottom="5dip">
                <!-- Logo de encabezado-->
                <ImageView 
                    android:src="@drawable/cabecera_kitchapp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"                    
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"/>
                <!-- fin Logo de encabezado -->
        </LinearLayout>
        <!--  fin Encabezado -->
        <!-- Pie de página -->
        <LinearLayout 
            android:id="@+id/footer"
            android:layout_width="fill_parent"
            android:layout_height="90dip"
            android:orientation="vertical"        
            android:background="@layout/pie_de_pagina"
            android:layout_alignParentBottom="true">
        </LinearLayout>
        <!-- fin Pie de página -->
 
        <!-- Formulario de login -->
        <LinearLayout          
            android:layout_width="fill_parent"
          	android:layout_height="fill_parent"
          	android:orientation="vertical"          	
          	android:padding="10dip"
          	android:layout_below="@id/header">
          <!-- Etiqueta Usuario -->
          <TextView 
              	android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="Usuario"/>
          
          <EditText 
              	android:id="@+id/reg_usuario"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dip"
                android:singleLine="true"
                android:layout_marginBottom="20dip"/>
          
          <!--  Etiqueta correo electrónico -->
          <TextView 	
              	android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="Correo electrónico"/>
          
          <EditText 
              	android:id="@+id/reg_email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dip"
                android:singleLine="true"
                android:layout_marginBottom="20dip"/>
          
          <!-- Etiqueta Contraseña -->
          <TextView 
              	android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="Contraseña"/>
          
          <EditText 
              	android:id="@+id/reg_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:password="true"
                android:singleLine="true"
                android:layout_marginTop="5dip"/>
          
          <!-- Botón Registro -->
          <Button 
              	android:id="@+id/btnRegistro"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip"
                android:text="Registrar Nueva Cuenta"/>
          
          <!-- Enlace a la pantalla de login -->
          <TextView 
              	android:id="@+id/link_to_login"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dip"
                android:layout_marginBottom="40dip"
                android:text="Ya tienes una cuenta! Entra Aquí"
                android:gravity="center"
                android:textSize="18dip"
                android:textColor="#025f7c"/>
 
        </LinearLayout>
        <!-- fin Formulario de login -->
  </RelativeLayout>
</ScrollView>