	   	    android:background="@drawable/boton_redondo_color_celeste"
	   	    android:text="@string/panBolleria"
	   	    android:textColor="@color/black" />
	
	   	<Button
	       	android:id="@+id/button4"
	       	android:layout_width="125dp"
	       	android:layout_height="58dp"
	   	    android:layout_alignParentRight="true"
	   	    android:layout_below="@+id/button2"
	   	    android:layout_marginRight="25dp"
	   	    android:layout_marginTop="13dp"
	       	android:background="@drawable/boton_redondo_color_celeste"
	       	android:text="@string/bebidas"
	       	android:textColor="@color/black" />
	
	   	<Button
	       	android:id="@+id/button6"
	       	android:layout_width="125dp"
	       	android:layout_height="58dp"
	   	    android:layout_alignParentRight="true"
	   	    android:layout_below="@+id/button4"
	   	    android:layout_marginRight="25dp"
	   	    android:layout_marginTop="13dp"
	       	android:background="@drawable/boton_redondo_color_celeste"
	       	android:text="@string/pescados"
	       	android:textColor="@color/black" />
	
	   	<Button
	       	android:id="@+id/button8"
	       	android:layout_width="125dp"
	       	android:layout_height="wrap_content"
	   	    android:layout_alignParentRight="true"
	   	    android:layout_below="@+id/button6"
	   	    android:layout_marginRight="25dp"
	   	    android:layout_marginTop="13dp"
	       	android:background="@drawable/boton_redondo_color_celeste"
	       	android:text="@string/pastasArroces"
	       	android:textColor="@color/black" />
	
	   	<Button
	       	android:id="@+id/button10"
	       	android:layout_width="125dp"
	       	android:layout_height="56dp"
	   	    android:layout_alignParentRight="true"
	   	    android:layout_below="@+id/button8"
	   	    android:layout_marginRight="25dp"
	   	    android:layout_marginTop="13dp"
	       	android:background="@drawable/boton_redondo_color_celeste"
	       	android:text="@string/varios"
	       	android:textColor="@color/black" />
	   	
	   	<Button
	   	    android:id="@+id/button_add"
	   	    android:layout_width="100dp"
	   	    android:layout_height="60dp"
	   	    android:background="@drawable/anadir_icono"
	   	    android:layout_alignParentLeft="true"
	   	    android:layout_below="@+id/button9"
