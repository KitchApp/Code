<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >
    <RelativeLayout
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content" 
    	android:background="@drawable/fondo_nuevo" >

        <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:paddingTop="190dp"	        
	        android:orientation="vertical" >       	
			
       		<LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
	                android:background="@color/lightGreen"		            
		        android:orientation="horizontal"
		        android:padding="20dp" 
		        android:layout_marginBottom="20dp"
		        android:layout_marginLeft="20dp"
		        android:layout_marginRight="20dp" >

	    		<Button
	    		        android:id="@+id/button1"		    		    
		    		android:layout_width="0dp"
		    		android:layout_height="wrap_content"
		    		android:layout_weight="1"
		    		android:background="@color/darkGray"
		    		android:drawableRight="@drawable/lista_compra"
		    		android:onClick="accederDespensa"
		    		android:text="@string/lista_compra"
		    		android:textColor="@color/white"
		    		android:textSize="45sp" />
			        
		</LinearLayout>
		
        	<LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:background="@color/lightGreen"
	                android:orientation="horizontal"
		        android:padding="20dp" 
		        android:layout_marginBottom="20dp"
		        android:layout_marginLeft="20dp"
		        android:layout_marginRight="20dp" >
				    
		        <Button
			        android:id="@+id/button2"
			        android:layout_width="0dp"
		    		android:layout_height="wrap_content"
			        android:layout_weight="1"      
			        android:textColor="@color/white" 
			        android:background="@color/darkGray"     		        
			        android:drawableRight="@drawable/despensa"		        		             
			        android:text="@string/despensa" 
			        android:textSize="45sp"
			        android:onClick="accederDespensa" />
				
		</LinearLayout>
				
		<LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:background="@color/lightGreen"
	                android:orientation="horizontal"
		        android:padding="20dp" 
		        android:layout_marginBottom="20dp"
		        android:layout_marginLeft="20dp"
		        android:layout_marginRight="20dp" >
				    
			<Button
			        android:id="@+id/button3"
			        android:layout_width="0dp"
		    	        android:layout_height="wrap_content"
			        android:layout_weight="1"                        		  
			        android:textColor="@color/white"    	
			        android:background="@color/darkGray"  	        
			        android:drawableRight="@drawable/recetario"		        		             
			        android:text="@string/recetario" 
			        android:textSize="45sp"
			        android:onClick="accederDespensa" />

		</LinearLayout>
				
	        <LinearLayout 
	                android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:background="@color/lightGreen"
		        android:orientation="horizontal"
		        android:padding="20dp" 
		        android:layout_marginBottom="20dp"
		        android:layout_marginLeft="20dp"
		        android:layout_marginRight="20dp" >
				    
			<Button
			        android:id="@+id/button4"
			        android:layout_width="0dp"
		    	        android:layout_height="wrap_content"
			        android:layout_weight="1"                        		    
			        android:textColor="@color/white"   
			        android:background="@color/darkGray"   		        
			        android:drawableRight="@drawable/estadisticas"		        		             
			        android:text="@string/estadisticas" 
			        android:textSize="45sp"
			        android:onClick="accederDespensa" />
				
		</LinearLayout>
		                		     		       
	</LinearLayout>

    </RelativeLayout>

</ScrollView>
